# Environment Variables for StockLeague

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Finnhub API (Required for stock data)
# Get your FREE API key from: https://finnhub.io/register
# Free tier: 60 requests/minute, no credit card required
FINNHUB_API_KEY=your_finnhub_api_key_here

# Database Configuration (SQLite is default)
DATABASE_PATH=database/stocks.db

# Session Configuration
SESSION_TYPE=filesystem
SESSION_PERMANENT=False

# Security (Change these in production!)
WTF_CSRF_ENABLED=True
