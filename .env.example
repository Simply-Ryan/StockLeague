# Environment Variables for StockLeague

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Stock data is now provided by Yahoo Finance (no API key required)
# Yahoo Finance provides unlimited free access to stock data

# Database Configuration (SQLite is default)
DATABASE_PATH=database/stocks.db

# Session Configuration
SESSION_TYPE=filesystem
SESSION_PERMANENT=False

# Security (Change these in production!)
WTF_CSRF_ENABLED=True
